<h1>Organizations</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Office type </th>
      <th>City </th>
      <th>State </th>
      <th>Parent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organizations.each do |organization| %>
      <tr>
        <td><%= organization.name %></td>
        <td><%= organization.office_type %></td>
        <td><%= organization.city %></td>
        <td><%= organization.state %></td>
        <td><%= organization.parent.try(:list_name) %></td>
        <td><%= link_to 'Show', organization %></td>

      <% if current_user.can_edit? %>
        <td><%= link_to 'Edit', edit_organization_path(organization) %></td>
        <td><%= link_to 'Destroy', organization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %> 

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.can_edit? %>
  <%= link_to 'New Organization', new_organization_path %>
<% end %>
